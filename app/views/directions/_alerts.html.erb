<% if @elevator_alerts %>
<div class="row">
  <div class='col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1'>
    <% @elevator_alerts.each do |notice| %>
      <p class="alerts"><%= notice %></p>
    <% end %>
  </div>
</div>
  <% else %>
    <div>
      <p>All Elevators are currently working!</p>
    </div>
<% end %>
